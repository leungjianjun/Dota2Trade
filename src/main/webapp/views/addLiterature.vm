<script src="../resources/common/theme/scripts/plugins/other/jquery.slimscroll.min.js"></script>
<script>
    function showhint(){
        $("#widget").show();
    }
    function hidehint(){
        $("#widget").hide();
    }
    $(document).ready(function(){
        $(".fake-delete").click(function(){
            $(this).parent().parent().hide();
        })
        $("#add-attachment").click(function(){
            if(!$("#fileupload-type1").is(":visible")){
                $("#fileupload-type1").show();
                return;
            }

            if(!$("#fileupload-type2").is(":visible")){
                $("#fileupload-type2").show();
                return;
            }

            if(!$("#fileupload-type3").is(":visible")){
                $("#fileupload-type3").show();
                return;
            }

            if(!$("#fileupload-type4").is(":visible")){
                $("#fileupload-type4").show();
                return;
            }
        })
    })
</script>
<script src="../resources/common/theme/scripts/plugins/system/modernizr.js"></script>
</body>